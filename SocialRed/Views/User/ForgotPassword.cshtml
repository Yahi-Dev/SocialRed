@using SocialRed.Core.Application.ViewModels.Users;
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot PasswordHash";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link rel="stylesheet" href="sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container-fluid">

    <div class="row">

        <div class="col-6 offset-3">

            <div class="card" id="CardStyle">

                <div class="card-header bg-dark text-light">
                    <h4 class="text-white">
                        Olvide mi contraseña
                    </h4>
                </div>

                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (Model.HasError == true)
                    {
                        <script>
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: '@Model.Error',
                                showConfirmButton: true,
                                timer: 5000
                            });
                        </script>
                    }
                    <form method="post" asp-controller="User" asp-action="ForgotPassword">

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Nombre de usuario: </label>
                            <input asp-for="UserName" placeholder="Username" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-warning">Volver atras</a>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>

<script src="sweetalert2.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>