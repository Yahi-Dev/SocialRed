@using SocialRed.Core.Application.ViewModels.Users;
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link rel="stylesheet" href="sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <div class="card shadow-sm" id="CardStyle">
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (Model.HasError == true)
                    {
                        <script>
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: '@Model.Error',
                                showConfirmButton: true,
                                timer: 5000
                            });
                        </script>
                    }
                    <form method="post" asp-controller="User" asp-action="Index">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo del usuario</label>
                            <input class="form-control" placeholder="Enter your Email" asp-for="Email">
                        </div>
                        <div class="mb-3">
                            <label asp-for="PasswordHash" class="form-label">Contraseña</label>
                            <input class="form-control" placeholder="Enter your Password" asp-for="PasswordHash">
                        </div>
                        <button type="submit" class="btn btn-outline-info float-end">Iniciar Sesion</button>
                        <a type="submit" asp-controller="User" asp-action="ForgotPassword" class="btn btn-outline-warning float-end me-2">
                            Olvide mi contraseña
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="sweetalert2.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>